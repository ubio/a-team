{
    "label": "Format Filename",
    "params": [
        {
            "name": "extension",
            "type": "string",
            "placeholder": "pdf",
            "value": "html"
        }
    ],
    "pipeline": {
        "pipes": [
            {
                "enabled": true,
                "bindings": [],
                "regexp": "\\s+",
                "replacement": "_",
                "caseInsensitive": true,
                "type": "value/replace-regexp"
            },
            {
                "enabled": true,
                "bindings": [],
                "regexp": "[^A-Za-z0-9_-]+",
                "replacement": "_",
                "caseInsensitive": true,
                "type": "value/replace-regexp"
            },
            {
                "enabled": true,
                "bindings": [],
                "regexp": "_+",
                "replacement": "_",
                "caseInsensitive": true,
                "type": "value/replace-regexp"
            },
            {
                "enabled": true,
                "bindings": [],
                "regexp": "^_+|_+$",
                "replacement": "",
                "caseInsensitive": true,
                "type": "value/replace-regexp"
            },
            {
                "enabled": true,
                "bindings": [],
                "path": "/basename",
                "type": "value/wrap"
            },
            {
                "enabled": true,
                "bindings": [],
                "path": "/extname",
                "onNull": "bypass",
                "pipeline": {
                    "pipes": [
                        {
                            "enabled": true,
                            "bindings": [
                                {
                                    "name": "value",
                                    "binding": "extension"
                                }
                            ],
                            "value": "",
                            "dataType": "string",
                            "type": "value/get-constant"
                        },
                        {
                            "enabled": true,
                            "bindings": [],
                            "regexp": ".*\\.",
                            "replacement": "",
                            "caseInsensitive": true,
                            "type": "value/replace-regexp"
                        }
                    ]
                },
                "type": "value/set-path"
            },
            {
                "enabled": true,
                "bindings": [],
                "template": "{/basename}.{/extname}",
                "type": "value/format-template"
            }
        ]
    }
}