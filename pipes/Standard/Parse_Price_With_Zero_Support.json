{
    "label": "Parse Price With Zero Support",
    "params": [
        {
            "name": "zeroPriceRegexp",
            "type": "string",
            "value": "^free$"
        },
        {
            "name": "definitionId",
            "label": "Reference Price Definition",
            "type": "definition",
            "value": null
        },
        {
            "name": "addSymbol",
            "label": "Add currency symbol",
            "type": "boolean",
            "value": false
        },
        {
            "name": "exponent",
            "type": "number",
            "min": -10,
            "max": 10
        }
    ],
    "pipeline": {
        "pipes": [
            {
                "enabled": true,
                "bindings": [],
                "path": "/input",
                "type": "value/wrap"
            },
            {
                "enabled": true,
                "bindings": [],
                "path": "/reference",
                "onNull": "bypass",
                "pipeline": {
                    "pipes": [
                        {
                            "enabled": true,
                            "bindings": [],
                            "type": "dom/get-document"
                        },
                        {
                            "enabled": true,
                            "bindings": [
                                {
                                    "name": "definitionId",
                                    "binding": "definitionId"
                                }
                            ],
                            "definitionId": "",
                            "type": "other/use"
                        }
                    ]
                },
                "type": "value/set-path"
            },
            {
                "enabled": true,
                "bindings": [],
                "pipelineCondition": {
                    "pipes": [
                        {
                            "enabled": true,
                            "bindings": [],
                            "path": "/input",
                            "optional": false,
                            "type": "value/get-path"
                        },
                        {
                            "enabled": true,
                            "bindings": [
                                {
                                    "name": "regexp",
                                    "binding": "zeroPriceRegexp"
                                }
                            ],
                            "regexp": "",
                            "caseInsensitive": true,
                            "type": "value/matches-regexp"
                        }
                    ]
                },
                "pipelinePositive": {
                    "pipes": [
                        {
                            "enabled": true,
                            "bindings": [],
                            "mappings": [
                                {
                                    "path": "/value",
                                    "value": "=0"
                                },
                                {
                                    "path": "/currencyCode",
                                    "value": "/reference/currencyCode"
                                }
                            ],
                            "mode": "replace",
                            "type": "value/compose"
                        }
                    ]
                },
                "pipelineNegative": {
                    "pipes": [
                        {
                            "enabled": true,
                            "bindings": [],
                            "pipelineCondition": {
                                "pipes": [
                                    {
                                        "enabled": true,
                                        "bindings": [],
                                        "mode": "value",
                                        "expression": "return ctx.resolveParam('addSymbol');",
                                        "type": "other/javascript"
                                    }
                                ]
                            },
                            "pipelinePositive": {
                                "pipes": [
                                    {
                                        "enabled": true,
                                        "bindings": [],
                                        "path": "/input",
                                        "onNull": "bypass",
                                        "pipeline": {
                                            "pipes": [
                                                {
                                                    "enabled": true,
                                                    "bindings": [],
                                                    "template": "{/input} {/reference/currencyCode}",
                                                    "type": "value/format-template"
                                                }
                                            ]
                                        },
                                        "type": "value/set-path"
                                    }
                                ]
                            },
                            "pipelineNegative": {
                                "pipes": []
                            },
                            "type": "other/if-else"
                        },
                        {
                            "enabled": true,
                            "bindings": [],
                            "path": "/input",
                            "optional": false,
                            "type": "value/get-path"
                        },
                        {
                            "enabled": true,
                            "bindings": [
                                {
                                    "name": "exponent",
                                    "binding": "exponent"
                                }
                            ],
                            "optional": false,
                            "exponent": 0,
                            "allowNegative": false,
                            "type": "value/parse-price"
                        }
                    ]
                },
                "type": "other/if-else"
            }
        ]
    }
}